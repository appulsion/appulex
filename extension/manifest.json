// Delays a request when delay in latency is imminent (due to starlink handover ro reconf) is detected.

{
    "name": "appulex",
    "version": "0.1",
    "manifest_version": 3,
    "description": "appulex delays a request when delay in latency is imminent (due to starlink handover ro reconf) is detected",
    "background": {
      "service_worker": "service-worker.js"
    },
    "devtools_page": "devtools.html",
    "permissions": [
      "webRequest"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "hello.html",
      "default_icon": "icons/hi_icon.png"
    }
  }
  